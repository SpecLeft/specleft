{
  "version": "1.0",
  "features": [
    {
      "id": "AUTH-001",
      "name": "User Authentication",
      "description": "Users can securely log in and out of the system",
      "metadata": {
        "owner": "auth-team",
        "component": "authentication",
        "priority": "critical",
        "tags": ["security", "user-management"],
        "external_references": [
          {
            "system": "jira",
            "id": "AUTH-100",
            "url": "https://jira.company.com/browse/AUTH-100"
          }
        ],
        "links": {
          "documentation": "https://docs.company.com/auth"
        }
      },
      "scenarios": [
        {
          "id": "login-success",
          "name": "Successful login with valid credentials",
          "description": "User can log in with correct username and password",
          "priority": "critical",
          "tags": ["smoke", "authentication", "critical"],
          "metadata": {
            "test_type": "smoke",
            "execution_time": "fast",
            "dependencies": ["database", "auth-service"]
          },
          "test_data": [
            {
              "params": {
                "username": "admin",
                "password": "admin123"
              },
              "description": "Admin user account"
            },
            {
              "params": {
                "username": "user",
                "password": "password"
              },
              "description": "Standard user account"
            }
          ],
          "steps": [
            {
              "type": "given",
              "description": "user has valid credentials"
            },
            {
              "type": "when",
              "description": "user enters username '{username}' and password"
            },
            {
              "type": "and",
              "description": "user clicks login button"
            },
            {
              "type": "then",
              "description": "user is authenticated and session is created"
            }
          ]
        },
        {
          "id": "login-invalid-credentials",
          "name": "Login fails with invalid credentials",
          "description": "User cannot log in with incorrect credentials",
          "priority": "high",
          "tags": ["authentication", "negative", "security"],
          "metadata": {
            "test_type": "regression",
            "execution_time": "fast"
          },
          "steps": [
            {
              "type": "given",
              "description": "user has invalid credentials"
            },
            {
              "type": "when",
              "description": "user attempts to login"
            },
            {
              "type": "then",
              "description": "login fails with error message"
            }
          ]
        }
      ]
    },
    {
      "id": "PARSE-001",
      "name": "Unit Parsing",
      "description": "Extract units from measurement strings",
      "metadata": {
        "owner": "core-team",
        "component": "parser",
        "priority": "high",
        "tags": ["parsing", "utilities"]
      },
      "scenarios": [
        {
          "id": "extract-unit-valid",
          "name": "Extract unit from valid input",
          "description": "Parser correctly extracts unit suffixes from measurement strings",
          "priority": "critical",
          "tags": ["smoke", "parsing"],
          "metadata": {
            "test_type": "unit",
            "execution_time": "fast"
          },
          "test_data": [
            {"params": {"input_str": "10kg", "expected": "kg"}, "description": "Kilograms"},
            {"params": {"input_str": "5lb", "expected": "lb"}, "description": "Pounds"},
            {"params": {"input_str": "100g", "expected": "g"}, "description": "Grams"}
          ],
          "steps": [
            {"type": "when", "description": "extracting unit from '{input_str}'"},
            {"type": "then", "description": "unit should be '{expected}'"}
          ]
        },
        {
          "id": "extract-unit-invalid",
          "name": "Handle invalid input gracefully",
          "description": "Parser returns None when no unit is found",
          "priority": "high",
          "tags": ["parsing", "error-handling"],
          "metadata": {
            "test_type": "unit",
            "execution_time": "fast"
          },
          "steps": [
            {"type": "given", "description": "input string has no unit"},
            {"type": "when", "description": "attempting to extract unit"},
            {"type": "then", "description": "should return None"}
          ]
        },
        {
          "id": "extract-unit-edge-cases",
          "name": "Extract unit from edge case inputs",
          "description": "Parser handles edge cases like spaces and mixed characters",
          "priority": "medium",
          "tags": ["parsing", "edge-cases", "regression"],
          "metadata": {
            "test_type": "unit",
            "execution_time": "medium"
          },
          "test_data": [
            {"params": {"input_str": " 20 oz ", "expected": "oz"}, "description": "Leading/trailing spaces"},
            {"params": {"input_str": "50kg123", "expected": "kg"}, "description": "Mixed characters"}
          ],
          "steps": [
            {"type": "when", "description": "extracting unit from '{input_str}'"},
            {"type": "then", "description": "unit should be '{expected}'"}
          ]
        }
      ]
    }
  ]
}
